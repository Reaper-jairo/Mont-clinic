<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<ScrollView
    android:id="@+id/scrollRegistrarPaciente"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@id/footerGps"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

            <!-- Botón Volver -->
            <Button
                android:id="@+id/btnVolverRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Volver al Login"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:contentDescription="@string/content_desc_boton_volver" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_xlarge">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar Nuevo Paciente"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete el formulario para registrar un nuevo paciente en el sistema"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="4dp" />
        </LinearLayout>

        <!-- Card de formulario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/surface"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- RUT -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="RUT (sin puntos ni guion)"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    app:helperText="Ej: 123456789 o 12345678K"
                    app:helperTextEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRutNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLines="1"
                        android:maxLength="9"
                        android:textSize="16sp"
                        tools:text="123456789" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Nombre -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Completo"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNombreNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textSize="16sp"
                        tools:text="Juan Pérez González" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo Electrónico"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:autofillHints="email"
                        tools:text="juan.perez@example.com" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contraseña -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contraseña"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPasswordNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:autofillHints="password"
                        tools:text="123456" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Teléfono -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Teléfono"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    app:prefixText="+56"
                    app:prefixTextColor="@color/text_secondary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTelefonoNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:maxLength="9"
                        android:textSize="16sp"
                        tools:text="912345678" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Dirección -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección"
                    android:layout_marginBottom="24dp"
                    app:startIconDrawable="@android:drawable/ic_menu_mylocation"
                    app:startIconTint="@color/primary"
                    app:hintTextColor="@color/primary"
                    app:boxStrokeColor="@color/primary"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDireccionNueva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress"
                        android:maxLines="2"
                        android:textSize="16sp"
                        tools:text="Calle Principal 123, Comuna" />
                </com.google.android.material.textfield.TextInputLayout>

                    <!-- Botón Registrar -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRegistrarPaciente"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_large"
                        android:text="@string/btn_registrar_paciente"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/corner_radius_medium"
                        app:backgroundTint="@color/primary"
                        android:textColor="@color/white"
                        app:icon="@android:drawable/ic_input_add"
                        app:iconGravity="textStart"
                        app:iconTint="@color/white"
                        android:contentDescription="@string/content_desc_boton_registrar" />

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressRegistrarPaciente"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:indeterminateTint="@color/primary"
                        android:contentDescription="@string/content_desc_progress_bar"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        <!-- Información adicional -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/divider"
            app:cardBackgroundColor="@color/primary_light"
            android:alpha="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ℹ️ Información"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Al registrar un paciente, se creará automáticamente:\n• Usuario en Authentication\n• Índice en rut_index\n• Registro en pacientes"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

<!-- Footer GPS -->
<include
    android:id="@+id/footerGps"
    layout="@layout/footer_gps"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

